<?xml version="1.0" encoding="utf-8"?>

   <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="200dp"

    app:cardElevation="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_gravity="center"
    >
    <RelativeLayout

        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:id="@+id/relative_vanish"
        >

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_homeremedie"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="28dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/roundedbuttonnew"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="Domestic Remedies"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_experthelp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/button_homeremedie"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/roundedbutton"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="Expert Help"
            android:textColor="@color/white" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListItem"
        android:textSize="20sp"
        android:background="@color/primary_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/button_homeremedie"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="20sp"
        android:gravity="center"
        />
</RelativeLayout>
</android.support.v7.widget.CardView>